pipeline {
    //agent any
    agent {
        docker { image 'fontecilla/cookingapp' }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building thecookingwebapp'

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}



